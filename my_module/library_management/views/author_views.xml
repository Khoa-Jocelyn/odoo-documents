<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="author_tree_views" model="ir.ui.view">
		<field name='name'>author.tree_view</field>
		<field name="model">library.author</field>
		<field name='arch' type='xml'>
			<tree string="Authors">
				<field name="name" />
				<field name="dob" />
				<field name='age' />
				<field name="gender" />
				<field name="introduce" />
				<field name="image" />
				<field name="book_ids" />
				<field name="note" />
			</tree>
		</field>
	</record>

	<record id="author_form_views" model="ir.ui.view">
		<field name='name'>author.form_view</field>
		<field name="model">library.author</field>
		<field name='arch' type='xml'>
			<form string="Authors">
				<sheet>
					<field name="image" widget="image" class="oe_avatar" />
					<div class="oe_title">
						<label for="name"></label>
						<h1>
							<field name="name" />
						</h1>
					</div>
					<group>
						<field name="dob" />
						<field name='age' />
						<field name="gender" />
					</group>
					<notebook>
						<page string="Introduce">
							<field name="introduce" widget="html" />
						</page>
						<page string="Books">
							<field name="book_ids" mode="tree">
								<tree editable="bottom">
									<field name="title" />
									<field name="category_id" />
									<field name="number_of_pages" />
									<field name="producer_id" />
									<field name="publishing_year" />
									<field name="quantity" />
									<field name="state" />
									<field name="price" />
								</tree>
							</field>
						</page>
					</notebook>
					<group>
						<field name="note" />
					</group>
					<button name="test_filtered" type="object"
						string="Filted" />
					<button name="test_mapped" type="object"
						string="Mapped" />
					<button name="test_sorted" type="object"
						string="Sorted" />
					<button name="test_read_group" type="object"
						string="Read Group" />
					<button name="action_state_over" type="object"
						string="Context State Over" />
					<button name="action_state_still" type="object"
						string="Context State Still" />
				</sheet>
			</form>
		</field>
	</record>

	<record id="author_action" model="ir.actions.act_window">
		<field name="name">Authors</field>
		<field name="res_model">library.author</field>
		<field name="view_mode">tree,form</field>
		<field name="type">ir.actions.act_window</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Create your first author infor
			</p>
		</field>
	</record>
	<menuitem id="author_menu" name="Authors"
		parent="book_menu_root" action="author_action" groups="group_manager" />
</odoo>